    <link rel="stylesheet" href="/css/styles.css">
    <script>
        // Simple utility to trigger database problems
        async function triggerProblem(id) {
            const button = document.getElementById(`btn-${id}`);
            const loadingText = button.getAttribute('data-loading') || 'Loading...';
            const originalText = button.innerHTML;
            
            // Disable button and show loading state
            button.disabled = true;
            button.innerHTML = loadingText;
            
            try {
                // Submit the form
                document.getElementById(`form-${id}`).submit();
            } catch (error) {
                console.error('Error triggering problem:', error);
                // Restore button state on error
                button.disabled = false;
                button.innerHTML = originalText;
                
                alert(`Error triggering problem: ${error.message}`);
            }
        }
    </script>
</head>
